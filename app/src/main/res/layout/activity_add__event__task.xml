<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mondelavictoria.todaysched.MainActivity">


    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/gradient"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <TextView
            android:id="@+id/textView2"

            android:drawableTop="@drawable/cloudyday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="12dp"
            android:textColor="#111"
            android:textSize="18dp"
            android:text="Task List" />

        <TextView
            android:id="@+id/textViewDate"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textColor="#111"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:text="" />

        <TextView
            android:id="@+id/textViewTime"
            android:layout_marginTop="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView3"
            android:layout_marginEnd="12dp"
            android:text="" />



    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="115dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#111"
            android:textAlignment="center"
            android:text="Task Name   |" />

        <TextView
            android:id="@+id/textView21"
            android:textColor="#111"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Where   |" />

        <TextView
            android:id="@+id/textView18"
            android:textColor="#111"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="When   |" />

        <TextView
            android:id="@+id/textView5"
            android:textColor="#111"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start Time " />
    </LinearLayout>



    <ListView

        android:layout_marginTop="135dp"
        android:id="@+id/listViewFri"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#eeeeee"
        android:layout_width="wrap_content"
        android:layout_height="200dp">
    </ListView>


    <RelativeLayout
        android:layout_marginTop="350dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:drawable="@drawable/border_shadow"
        android:layout_height="80dp">
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floating"

            android:background="@color/colorPrimary"
            android:src="@android:drawable/ic_input_add"
            app:backgroundTint="#e1f5fe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="10dp">

        </android.support.design.widget.FloatingActionButton>

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#fff"
        app:behavior_hideable="true"
        app:behavior_peekHeight="55dp"
        app:layout_behavior="@string/bottom_sheet_behavior">

        <ImageButton
            android:id="@+id/button_add_event"
            android:layout_width="40dip"
            android:layout_height="30dip"
            android:layout_centerHorizontal="true"
            android:src="@drawable/btn_click_up_down"

            android:background="#fff"
            android:text="Events/Task" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_add_event"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="58dp"
            android:text="No events or task added" />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView6"
            android:background="@drawable/border"
            android:layout_marginTop="13dp"
            android:orientation="horizontal"
            android:id="@+id/linearLayout">

            <TextView
                android:id="@+id/textView23"
                android:textColor="#111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="5dp"
                android:textAlignment="center"
                android:text="Company  |" />

            <TextView
                android:id="@+id/textView14"
                android:textColor="#111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_weight="1"
                android:text="Location  |" />

            <TextView
                android:id="@+id/textView16"
                android:textColor="#111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="Start Time  |" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="#111"
                android:text="End Time" />
        </LinearLayout>

        <ListView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eeeeee"
            android:layout_marginBottom="100dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout"
            android:layout_marginTop="11dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floating1"

            android:background="@color/colorPrimary"
            android:src="@android:drawable/ic_input_add"
            app:backgroundTint="#e1f5fe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="295dp"
            android:layout_marginTop="400dp">

        </android.support.design.widget.FloatingActionButton>

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>